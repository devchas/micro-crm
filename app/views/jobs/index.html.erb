<h1>Job Opportunity Pipeline</h1>

<div class="row">
	<table class="table table-striped table-hover">
		<thead class="thead-inverse">
			<tr>
				<th>Company</td>
				<th>Position</td>
				<th>Link</td>
				<th>Status</td>
				<th>Notes</td>
				<th></th>
			</tr>
		</thead>
		<tbody>
			<% @jobs.each do |job| %>
				<tr scope="row">
					<td><%= job.company %></td>
					<td><%= job.position %></td>
					<td>
						<% if job.link != "" %>
							<a href="<%= job.link %>">Link</a>
						<% else %>
							-
						<% end %>
					</td>
					<td><%= job.status %></td>
					<td><%= job.notes %></td>
					<td>
						<div class="btn-group" role="group" aria-label="Basic example">
							<%= link_to "Edit", edit_job_path(id: job.id), {class: "btn btn-default"} %>
							<%= link_to "Delete", job, {method: :delete, class: "btn btn-default btn-danger"} %>
						</div>
					</td>
				</tr>
			<% end %>
		</tbody>
	</table>
</div>
<div class="row">
	<%= link_to "New Job", new_job_path, class: "btn btn-primary" %>
</div>